<Window x:Class="MatieAppExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatieAppExam"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="Матье" Height="450" Width="800">
    <Grid>
        <Frame Source="Pages/AuthPage.xaml" NavigationUIVisibility="Hidden"/>
        <DockPanel Height="40" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <TextBlock Margin="10" Width="35">Матье</TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="HideButton" Content="Свернуть" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Click="HideButton_Click"></Button>
                <Button Name="CloseButton" Content="Закрыть" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Click="CloseButton_Click"></Button>
            </StackPanel>
        </DockPanel>
        
    </Grid>
</Window>
