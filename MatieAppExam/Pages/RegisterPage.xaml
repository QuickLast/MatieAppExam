<Page x:Class="MatieAppExam.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatieAppExam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="LoginTBx" Text="Имя пользователя" Width="200" Height="40"></TextBox>
            <TextBox Name="PasswordTBx" Text="Пароль" Width="200" Height="40"></TextBox>
            <Button Name="AuthBtn" Content="Зарегистрироваться" Width="200" Height="40" Click="AuthBtn_Click"></Button>
            <Button Name="RegBtn" Content="У меня есть аккаунт" Width="200" Height="40" Click="RegBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
